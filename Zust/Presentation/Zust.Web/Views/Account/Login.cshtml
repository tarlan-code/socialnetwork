@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@model LoginVM
<div class="profile-authentication-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="profile-authentication-image">
                    <div class="content-image">
                        <div class="logo">
                            <img src="~/assets/images/logo.png" alt="Zust">
                        </div>
                        <div class="vector-image">
                            <img src="~/assets/images/vector.png" alt="image">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="login-form">
                    <h2>Login</h2>

                    <form method="post">
                        <div class="form-group">
                            <label>Username or email</label>
                            <input asp-for="UsernameOrEmail" class="form-control">
                            <span asp-validation-for="UsernameOrEmail"></span>
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control">
                            <span asp-validation-for="Password"></span>
                        </div>
                            <div asp-validation-summary="ModelOnly"></div>
                        <div class="remember-me-wrap d-flex justify-content-between align-items-center">
                            <p>
                                <input asp-for="RememberMe" type="checkbox">
                                <label for="RememberMe">Remember me</label>
                                <span asp-validation-for="RememberMe"></span>
                            </p>
                           
                            <div class="lost-your-password-wrap">
                                <a asp-action="PasswordReset" class="lost-your-password">Forgot password ?</a>
                            </div>
                        </div>
                        <div class="d-flex flex-column">
                            @if (!(ViewBag.Confirmed ?? true))
                            {
                                <a class="btn btn-success col-3" asp-action="SendConfEmail" asp-controller="Account" asp-route-email="@ViewBag.Email">Resend</a>
                            }
                        </div>
                        <button type="submit" class="default-btn">Login</button>
                        <div class="or-text"><span>Or</span></div>
                        <a asp-action="GoogleLogin" asp-controller="Account" class="google-btn btn"><i class="fa-brands fa-google me-2 fs-4"></i>Login with Google</a>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="home-btn-icon">
        <a asp-action="Register" asp-controller="Account" class="btn btn-light"><i class="fa-solid fa-ghost fa-2xl"></i>Register</a>
    </div>

    
</div>

