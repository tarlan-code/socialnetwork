
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@model RegisterVM
<div class="profile-authentication-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="profile-authentication-image">
                    <div class="d-table">
                        <div class="d-table-cell">
                            <div class="content-image">
                                <div class="logo">
                                    <img src="~/assets/images/logo.png" alt="Zust">
                                </div>
                                <div class="vector-image">
                                    <img src="~/assets/images/vector.png" alt="image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-12">
                <div class="register-form">
                    <h2>Register</h2>

                    <form method="post">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" asp-for="Name" class="form-control">
                            <span asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label>Username</label>
                            <input asp-for="Username" class="form-control">
                            <span asp-validation-for="Username"></span>
                        </div>

                        <div class="form-group">
                            <label>Birthday</label>
                            <input type="date" asp-for="Birthday" class="form-control" placeholder="dd-mm-yyyy"
                                   min="@(DateTime.Now.AddYears(-150).ToString("dd-MM-yyyy"))" max="@(DateTime.Now.AddYears(-13).ToString("dd-MM-yyyy"))">
                            <span asp-validation-for="Birthday"></span>
                        </div>
                        
                        
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control">
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="remember-me-wrap">
                            <p>
                                <label for="test1">
                                    When you register, you will have accepted the <button type="button" class="btn btn-transparent text-info p-0" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        Privacy
                                    </button> policy
                                  
                                </label>
                            </p>
                        </div>
                        <button type="submit" class="default-btn">Register</button>
                        <div class="or-text"><span>Or</span></div>
                        <a asp-action="GoogleLogin" asp-controller="Account" class="google-btn btn"><i class="fa-brands fa-google me-2 fs-4"></i>Register with Google</a>
                    </form>
                </div>
            </div>
        </div>
    </div>


    

    <div class="home-btn-icon">
        <a asp-action="Login" asp-controller="Account" class="btn btn-light"><i class="fa-solid fa-right-to-bracket"></i>Log In</a>
    </div>
</div>


