@model DeleteAccountVM

<form class="account-setting-form" asp-action="DeleteAccount" asp-controller="Settings">
    <div class="title">
        <h3>Close Account</h3>
        <p><span>Warning:</span> If you close your account, all your followers and friends will be unsubscribed and you will lose access forever.(30 days after)</p>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div class="form-group">
                <label>Your Email Address</label>
                <input asp-for="Email" type="email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="col-lg-6 col-md-6">
            <div class="form-group">
                <label>Your Password</label>
                <input asp-for="Password" type="password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="col-lg-12 col-md-12">
            <button type="submit" class="default-btn">Delate Account</button>
        </div>
    </div>
</form>