
@{
    ViewData["Title"] = "Notifications";
}

@model List<NotificationVM>

<div class="content-page-box-area">
    <div class="all-notifications-body">
        <div class="all-notifications-header d-flex justify-content-between align-items-center">
            <h3>Notifications</h3>

            <div class="dropdown">
                <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="flaticon-menu"></i></button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item d-flex align-items-center" asp-controller="Notifications"  asp-action="DeleteAll"><i class="flaticon-trash"></i> Clean Notification</a></li>
                </ul>
            </div>
        </div>


        @if(Model is not null){
            foreach (NotificationVM item in Model)
            {
        <div class="item d-flex justify-content-between align-items-center notf">
            <div class="figure">
                        <img src='~/assets/zust/users/@(item.ProfilImage == "default.png" ? "other/default.png" : item.Username+"/"+item.ProfilImage)' class="rounded-circle" width="70" alt="image">
            </div>
            <div class="text">
                <h4><a href="/Profiles?username=@item.Username">@item.Fullname</a></h4>
                <span>@item.Title</span>
                <span class="main-color">@item.Date Ago</span>
            </div>
            <div class="icon">
                <a class="delete-notf" asp-action="Delete" asp-controller="Notifications" asp-route-id="@item.Id"><i class="flaticon-x-mark"></i></a>
            </div>
        </div>
                
            }
        }

    </div>
        <div class="load-more-posts-btn">
            <a class="load-more-notification"><i class="flaticon-loading"></i> Load More Notifications</a>
        </div>
</div>
